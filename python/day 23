print("n Main Function Demo n")
    def demo(got):
        print("&hellip;Beginning Game Of Thrones&hellip;n")
        new_got = str.split(got)
        print("&hellip;Game of Thrones has finished&hellip;n")
        return new_got
    def main():
        got= "n Bran Stark wins the Iron Throne n"
        print(got)
        new_got = demo(got)
        print(new_got)
    if __name__ == "__main__":
        main()

print("n Main Function Demo n")
    def demo(got):
        print("&hellip;Beginning Game Of Thrones Demo1&hellip;n")
        new_got = str.split(got)
        print("&hellip;Game of Thrones has finished&hellip;n")
        return new_got
    def getgot():
        print("&hellip;Getting GOT Data&hellip;n")
        got="Bran Stark wins the Iron Throne n"
        print("&hellip;GOT Data has been returned&hellip;n")
        return got
    def main():
        got= getgot()
        print(got)
        new_got = demo(got)
        print(new_got)
    if __name__ == "__main__":
        main()

